<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dia_plant_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Please enter username:" />

        <EditText
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:singleLine="true" >
        </EditText>

        <Button
            android:id="@+id/launchStartNewGame3D"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Start New Game in 3D" />

        <Button
            android:id="@+id/launchContinueCurrentGame3D"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Reload existing game in 3D" />

        <Button
            android:id="@+id/view_unlocked_sponsored_seeds"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="View unlocked seeds" />

        <Button
            android:id="@+id/view_objective_completion"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="View objectives" />

        <Button
            android:id="@+id/reset_objective_completion"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Reset objective completion" />

        <Button
            android:id="@+id/read_help"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Read help and information" />

        <Button
            android:id="@+id/launchStartNewGame2D"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="DEV: Start New Game in 2D" />

        <Button
            android:id="@+id/launchContinueCurrentGame2D"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="DEV: Reload game in 2D" />
        
        <Button
            android:id="@+id/test_seed_upload"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="DEV: Upload a seed" />
    </LinearLayout>

</ScrollView>